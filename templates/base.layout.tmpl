{{define "base"}}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{getTranslation "page_title_home"}}</title>
    <link rel="stylesheet" type="text/css" href="/static/css/notie.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/datepicker.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/style.css">
    {{block "css" .}}
    {{end}}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/{{.CurrentLanguage}}">{{getTranslation "menu_item_home"}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/{{.CurrentLanguage}}/customers">{{getTranslation "menu_item_all_customers"}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/{{.CurrentLanguage}}/customer">{{getTranslation "menu_item_add_new_customer"}}</a>
                </li>
            </ul>
            {{$url := .CurrentUrlWithoutLocale}}
            {{range $key, $value := .AllowedLocales}}
                <a href="/{{$value}}{{$url}}">
                    <img src="/static/images/flag_{{$value}}.svg" title="{{$value}}" class="flag_icon" alt="{{$value}}">
                </a>
            {{end}}
        </div>
    </div>
</nav>
{{block "content" .}}
{{end}}

<script src="/static/js/bootstrap.min.js"></script>
<script src="/static/js/datepicker.min.js"></script>
<script src="/static/js/notie.min.js"></script>
<script src="/static/js/sweetalert.js"></script>
<script src="/static/js/form.js"></script>

{{block "js" .}}
{{end}}

<script>
    function notify(msg, msgType) {
        notie.alert({
            type: msgType,
            text: msg
        })
    }

    {{with .Error}}
        notify("{{.}}", "error")
    {{end}}

    {{with .Flash}}
        notify("{{.}}", "success")
    {{end}}

    {{with .Warning}}
        notify("{{.}}", "warning")
    {{end}}

</script>
</body>
</html>
{{end}}